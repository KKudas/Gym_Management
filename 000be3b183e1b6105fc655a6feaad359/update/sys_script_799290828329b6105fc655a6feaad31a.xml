        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Add your code here
	var workoutsField = current.getValue('workouts');
    
    // Check if workouts field has value
    if (!workoutsField) {
        gs.addErrorMessage('Workout plan must contain at least 5 workouts.');
        current.setAbortAction(true);
        return;
    }
    
    // Split the comma-separated list of workout IDs
    var workouts = workoutsField.split(',');
    
    // Check for minimum 5 workouts
    if (workouts.length < 5) {
        gs.addErrorMessage('Workout plan must contain at least 5 workouts. Currently has ' + workouts.length + '.');
        current.setAbortAction(true);
    }

})(current, previous);]]></script>
